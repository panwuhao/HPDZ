@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ECharts</title>
    <style type="text/css">
        .big {
            overflow: hidden;
        }

        .echarts {
            float: left;
        }
    </style>
</head>
<body>
    <div class="big">
        @*饼状图 柱状图*@
        <div id="main" class="echarts" style="width:600px;height:400px;"></div>
        <div id="main1" class="echarts" style="width:800px;height:400px; margin-left:251px;"></div>
        <div id="main2" class="echarts" style="width:800px;height:400px;"></div>
    </div>

    @*饼状图 柱状图*@
    <script src="~/js/jquery-1.7.js"></script>
    <script src="~/js/layui.all.js"></script>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>

    <script src="~/js/Echarts.js"></script>
    <script type="text/javascript">
        //JavaScript代码区域
        layui.use('element', function () {
            var element = layui.element;
        })
        $(function () {

            var myChart = echarts.init(document.getElementById('main'));
            $.ajax({
                url: "/Index/EcSellAnalyze",
                data: {},
                type: "post",
                dataType: "json",
                success: function (json) {
                    date = json
                    option = {
                        title: {
                            text: '会员舱型',
                            subtext: '数据库的实时数据统计',
                            x: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            formatter: "{a} <br/>{b} : {c} ({d}%)"
                        },
                        legend: {
                            orient: 'vertical',
                            left: 'left',
                            data: date
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '60%'],
                                data: date
                            }
                        ]
                    };
                    myChart.setOption(option);
                }
            })
            var myChart1 = echarts.init(document.getElementById('main1'));
            $.ajax({
                url: "/Index/EcSellAnalyze1",
                data: {},
                type: "post",
                dataType: "json",
                success: function (json) {
                    date = json
                    option = {
                        title: {
                            text: '航班航线',
                            subtext: '数据库的实时数据统计',
                            x: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            formatter: "{a} <br/>{b} : {c} ({d}%)"
                        },
                        legend: {
                            orient: 'vertical',
                            left: 'left',
                            data: date
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '60%'],
                                data: date
                            }
                        ]
                    };
                    myChart1.setOption(option);
                }
            })

            var myChart2 = echarts.init(document.getElementById('main2'));
            $.ajax({
                url: "/Index/EcSellAnalyze2",
                data: {},
                type: "post",
                dataType: "json",
                success: function (json) {
                    date = json
                    console.log(date);
                    var arr = [];
                    for (var i = 0; i < date.length; i++) {
                        arr[i] = date[i].name;
                    }
                    option = {
                        xAxis: {
                            type: 'category',
                            data: arr
                        },
                        yAxis: {
                            type: 'value'
                        },
                        series: [{
                            //颜色
                            //itemStyle: {
                            //    normal: {
                            //        color: 'DarkTurquoise'
                            //    }
                            //},
                            data: date,
                            type: 'bar'
                        }]
                    };
                    myChart2.setOption(option);
                }
            })
        })
    </script>
</body>
</html>
