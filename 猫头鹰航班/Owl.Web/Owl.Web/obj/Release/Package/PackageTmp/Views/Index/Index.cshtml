                </ul>
            </div>
        </div>

        <div class="layui-body">
            <!-- 内容主体区域 -->
            <div style="padding: 15px;">
                <iframe name="frame" src="~/ECharts 地图显示/examples/大飞机.html" width="100%" height="780px" frameborder="0" scrolling="yes"></iframe>
                <div id="main" style="width:600px;height:400px;border:solid 1px"></div>
                <div id="main1" style="width:800px;height:400px;"></div>
            </div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
        </div>
    </div>
    <script src="~/js/jquery-1.7.js"></script>
    <script src="~/js/layui.all.js"></script>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>

    <script src="~/js/Echarts.js"></script>
    <script type="text/javascript">
        //JavaScript代码区域
        layui.use('element', function () {
            var element = layui.element;
        })
        $(function () {

            var myChart = echarts.init(document.getElementById('main'));
            $.ajax({
                url: "/Index/EcSellAnalyze",
                data: {},
                type: "post",
                dataType: "json",
                success: function (json) {
                    date = json
                    option = {
                        title: {
                            text: '会员舱型',
                            subtext: '数据库的实时数据统计',
                            x: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            formatter: "{a} <br/>{b} : {c} ({d}%)"
                        },
                        legend: {
                            orient: 'vertical',
                            left: 'left',
                            data: date
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '60%'],
                                data: date
                            }
                        ]
                    };
                    myChart.setOption(option);
                }
            })
            var myChart1 = echarts.init(document.getElementById('main1'));
            $.ajax({
                url: "/Index/EcSellAnalyze1",
                data: {},
                type: "post",
                dataType: "json",
                success: function (json) {
                    date = json
                    option = {
                        title: {
                            text: '航班航线',
                            subtext: '数据库的实时数据统计',
                            x: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            formatter: "{a} <br/>{b} : {c} ({d}%)"
                        },
                        legend: {
                            orient: 'vertical',
                            left: 'left',
                            data: date
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '60%'],
                                data: date
                            }
                        ]
                    };
                    myChart1.setOption(option);
                }
            })
        })
    </script>
</body>
</html>
