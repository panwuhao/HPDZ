        <div class="row">
            <table id="ListTb" class="table table-bordered">
                <tr>
                    <th>文件名</th>
                    <th>目录</th>
                    <th>修改时间</th>
                    <th>全名</th>
                    <th>操作</th>
                </tr>
            </table>
            <div class="pagebox" style="height:30px;" id="box"></div>

            <script id="dataList" type="text/x-jquery-tmpl">
                {{each  Data}}
                <tr>
                    <td>${filename}</td>
                    <td>${path}</td>
                    <td>${time}</td>
                    <td>${fullname}</td>
                    <td><a href="/FileUpload/DownLoad?filename=${filename}" class="tagDelete" tid="${filename}">下载</a></td>
                </tr>
                {{/each}}
            </script>
        </div>
    </div>

    <script src="~/js/common.js"></script>
    <script type="text/javascript" charset="utf-8">
        var dic = {
            queryList: function () {
                _.queryList("/FileUpload/GetFileList", { "PageIndex": 0, "PageSize": 3 });
            }
        };
        $(document).ready(function () {
            dic.queryList();
        });
    </script>


</body>
</html>

